<?xml version="1.0"?>
<!DOCTYPE ACTIONS SYSTEM "actions.dtd">
<ACTIONS>
    <ACTION NAME="encryption.encrypt-file">
        <CODE>
            mochi.EncryptionPlugin.instance.encryptFile(buffer.getPath());
        </CODE>
    </ACTION>
    <ACTION NAME="encryption.encrypt-file-and-close">
        <CODE>
            mochi.EncryptionPlugin.instance.encryptFile(buffer.getPath());
            org.gjt.sp.jedit.jEdit.closeBuffer(view, buffer);
        </CODE>
    </ACTION>
    <ACTION NAME="encryption.decrypt-file">
        <CODE>
            mochi.EncryptionPlugin.instance.decryptFile(buffer.getPath());
        </CODE>
    </ACTION>
</ACTIONS>